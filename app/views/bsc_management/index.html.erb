<%= render_project_bsc_tab('info') %>

<h2><%=l(:"bsc.label_info")%></h2>

<%= error_messages_for 'bsc_project_info' %>

<% if User.current.admin and @bsc_project_info.id.present? and !@has_checkpoints %>
  <div class="contextual">
    <%= link_to l(:button_delete), { action: :destroy }, data: { confirm: l(:text_are_you_sure) }, :method => :delete, :class => 'icon icon-del' %>
  </div>
  <div style="clear:both;"></div>
<% end %>
<%= labelled_form_for :bsc_project_info, @bsc_project_info,
                   :url => { :controller => 'bsc_management', :action => 'index', :project_id => @project },
                   :lang => current_language do |f| %>

  <fieldset class="box tabular">
    <legend><%=t :"bsc.label_actual_data" %></legend>
    <div class="splitcontentleft">
      <p><%= f.text_field :actual_start_date, :size => 10, :readonly => (!User.current.allowed_to?(:bsc_manage_dates, @project) and @project.bsc_manage_dates) %><%= calendar_for('bsc_project_info_actual_start_date') %></p>    
    </div>

  </fieldset>

  <fieldset class="box tabular">
    <legend><%=t :"cmi.label_initial_schedule" %></legend>
    <p><%= f.text_field :scheduled_start_date, :size => 10, :required => true %><%= calendar_for('bsc_project_info_scheduled_start_date') %></p>
    <div class="splitcontentleft">
      <p><%= f.text_field :scheduled_finish_date, :size => 10, :required => true, :readonly => (!User.current.allowed_to?(:bsc_manage_dates, @project) and @project.bsc_manage_dates) %><%= calendar_for('bsc_project_info_scheduled_finish_date') %></p>
    </div>
    <div class="splitcontentright">
      <p><%= f.text_field :scheduled_qa_meetings, :size => 10, :required => true %></p>
    </div>
    <div style="clear:both;"></div>
  </fieldset>

  <%= submit_tag(l(:button_save)) %>
<% end %>
